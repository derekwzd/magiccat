}

#book .cover h1 {
	color: white;
	text-align: center;
	font-size: 50px;
	line-height: 500px;
	margin: 0px;
}

#book .loader {
	background-image: url(<%=request.getContextPath()%>/resources/pre/Images/loader.gif);
	width: 24px;
	height: 24px;
	display: block;
	position: absolute;
	top: 238px;
	left: 188px;
}

#book .data {
	text-align: center;
	font-size: 40px;
	color: #999;
	line-height: 50px;
}

#controls {
